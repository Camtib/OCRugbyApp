<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/dateTextView"
                android:layout_width="120dp"
                android:layout_height="82dp"
                android:gravity="center"
                android:text="@string/date"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Switch
                android:id="@+id/availabilitySwitch"
                android:layout_width="57dp"
                android:layout_height="42dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/dateTextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dateTextView" />

            <TextView
                android:id="@+id/firstsFixture"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:text="1st XV vs ..."
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/firstsHA"
                app:layout_constraintStart_toEndOf="@+id/dateTextView"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/secondsFixture"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:text="2nd XV vs ..."
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/firstsFixture"
                app:layout_constraintStart_toEndOf="@+id/dateTextView"
                app:layout_constraintTop_toBottomOf="@+id/firstsFixture" />

            <TextView
                android:id="@+id/bsFixture"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:text="B XV vs ..."
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/bsHA"
                app:layout_constraintStart_toEndOf="@+id/dateTextView"
                app:layout_constraintTop_toBottomOf="@+id/secondsFixture" />

            <TextView
                android:id="@+id/firstsHA"
                android:layout_width="50dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:text="H/A"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/firstsFixture"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/secondsHA"
                android:layout_width="50dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:text="H/A"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/secondsFixture"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/firstsHA" />

            <TextView
                android:id="@+id/bsHA"
                android:layout_width="50dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:text="H/A"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/bsFixture"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/secondsHA" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>